{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["src", "server.ts"]
}